{{#if selectedSnippets}}
    {{view actionBar-component snippets=selectedSnippets}}
{{/if}}

<div class="jumbotron search">
    <div class="container">
        <div class="input-group">
            {{#if query}}
                <div class="input-group-btn">
                    <div {{action 'clear'}} class="btn btn-default">
                        <i class="fa fa-times"></i>
                    </div>
                </div>
            {{/if}}

            {{suggest-input value=query insert-newline='search'}}

            <div class="input-group-btn">
                <button {{action 'search'}} class="btn btn-primary btn-search">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>

        <!-- TODO: Implement session.model.filters based on fileSystem.model.labels -->
        {{#each label in fileSystem.labels}}
            {{view label-component label=label}}&nbsp;
        {{/each}}
    </div>
</div>

<button class="btn btn-default btn-file">
    Import audio
    {{file-input}}
</button>

<div class="list-group">
    {{#each snippet in snippets}}
        {{#view snippet-component snippet=snippet action='play' param=snippet onDragStart=onSnippetDragStart}}
            {{#if showSelected}}
                <div class="text-center inner-panel text-large">
                    <span class="label label-primary">
                        {{selectedSnippets.length}}
                    </span>
                </div>
            {{/if}}
        {{/view}}
    {{/each}}
</div>

{{#if isLoading}}
    <div class="text-center audio-icon">
        <i class="fa fa-spinner fa-pulse"></i>
    </div>
{{/if}}
