<div class="btn-group btn-group-justified">
    <div {{action 'toggle' 'searchOnline'}} {{bind-attr class=':btn searchOnline:btn-primary'}}>
        Online
    </div>
    <div {{action 'toggle' 'searchMusicOnly'}} {{bind-attr class=':btn searchMusicOnly:btn-primary'}}>
        Music only
    </div>
    <div {{action 'toggle' 'searchOffline'}} {{bind-attr class=':btn searchOffline:btn-primary'}}>
        Offline
    </div>
</div>

<div class="form-group">
    <div {{bind-attr class='query:input-group'}}>
        {{suggest-input value=query placeholder='Search' fetchSuggestions=fetchSuggestions insert-newline='search'}}

        {{#if query}}
            {{clear-addon text=query}}
        {{/if}}
    </div>
</div>

<button class="btn btn-default btn-file">
    Import audio
    {{file-input}}
</button>

{{view snippets-component snippets=sortedSnippets action='play' param=snippet}}

{{#if isLoading}}
    <div class="text-center audio-icon">
        <i class="fa fa-spinner fa-pulse"></i>
    </div>
{{/if}}
