<div class="container">
    <div class="input-group">
        {{#if query}}
            <div class="input-group-btn">
                <div {{action 'clear'}} class="btn btn-default">
                    <i class="fa fa-times"></i>
                </div>
            </div>
        {{/if}}

        {{focus-input value=query class='form-control' placeholder='Search' insert-newline='search'}}

        <div class="input-group-btn">
            <button {{action 'search'}} class="btn btn-primary">
                <i class="fa fa-search"></i>
            </button>
        </div>
    </div>

    <div class="search-labels">
        <div {{action 'toggleMusicOnly'}} {{bind-attr class=':label session.model.musicOnly:label-primary:label-default'}}>
            {{#if musicOnly}}
                <i class="fa fa-check" ></i>
            {{/if}}

            music only
        </div>
    </div>
</div>

<div class="list-group">
    {{#each snippet in snippets}}
        <a {{action 'load' snippet}} class="list-group-item">
            <div class="media-left media-middle">
                <div class="outer-image">
                    <img class="media-object inner-image" {{bind-attr src=snippet.thumbnail}} />
                </div>
            </div>
            <div class="media-body">
                <h5>
                    {{snippet.title}}
                </h5>
            </div>
        </a>
    {{/each}}
</div>
