<div class="form-group">
    <div class="input-group float-input">
        {{#if liveQuery}}
            {{clear-addon text=liveQuery}}
        {{/if}}

        {{suggest-input value=liveQuery placeholder='Create or search label' fetchSuggestions=fetchSuggestions insert-newline='search'}}

        <div {{action 'createLabel'}} class="input-group-btn">
            <div class="btn btn-primary">
                <i class="fa fa-plus"></i>
            </div>
        </div>
    </div>
</div>

<div class="text-right">
    <div class="btn btn-primary">
        <i class="fa fa-search"></i>
    </div>
</div>

{{#each label in sortedLabels}}
    {{app-label model=label didClick=didClick}}
{{/each}}
