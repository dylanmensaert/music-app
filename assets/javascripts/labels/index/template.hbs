{{#if cache.selectedSnippets}}
    {{#action-bar models=cache.selectedSnippets}}
        <div class="col-xs-2 outer-label">
            {{#link-to 'index' tagName='div' class='inner-label'}}
                <i class="mdi-navigation-arrow-back"></i>
            {{/link-to}}
        </div>

        <div class="col-xs-6">
            &nbsp;
        </div>
    {{/action-bar}}
{{else}}
    {{#if selectedLabels}}
        {{#action-bar models=selectedLabels deselect='exitEdit'}}
            <div class="col-xs-4">
                &nbsp;
            </div>

            <div class="col-xs-2 outer-label">
                {{#if hasSingle}}
                    {{#if isEditMode}}
                        <div {{action 'exitEdit'}} class="inner-label">
                            <i class="mdi-content-clear"></i>
                        </div>
                    {{else}}
                        <div {{action 'setupEdit'}} class="inner-label">
                            <i class="mdi-editor-mode-edit"></i>
                        </div>
                    {{/if}}
                {{else}}
                    &nbsp;
                {{/if}}
            </div>

            <div class="col-xs-2 outer-label">
                <div{{action 'remove'}}  class="inner-label">
                    <i class="mdi-action-delete"></i>
                </div>
            </div>
        {{/action-bar}}
    {{/if}}
{{/if}}

<div class="form-group float-input">
    <div {{bind-attr class='liveQuery:input-group'}}>
        {{#if liveQuery}}
            {{clear-addon text=liveQuery}}
        {{/if}}

        {{#if isEditMode}}
            {{suggest-input value=liveQuery placeholder=editLabelPlaceholder fetchSuggestions=fetchSuggestions insert-newline='saveEdit'}}
        {{else}}
            {{suggest-input value=liveQuery placeholder='Search or create label' fetchSuggestions=fetchSuggestions insert-newline='search'}}
        {{/if}}
    </div>
</div>

{{#if isEditMode}}
    <div {{action 'create'}} class="btn btn-primary">
        <i class="fa fa-plus"></i>
    </div>

    <div class="btn btn-primary">
        <i class="fa fa-search"></i>
    </div>
{{/if}}

{{#each label in sortedLabels}}
    {{app-label model=label action='toggle' param=label}}
{{/each}}
