<div class="form-group">
    <div class="input-group">
        {{#if query}}
            {{clear-addon text=query}}
        {{/if}}

        {{input value=query placeholder='Create or search label' action='search' on='enter' class='form-control'}}

        <div {{action 'createLabel'}} class="input-group-btn">
            <div class="btn btn-primary">
                <i class="fa fa-plus"></i>
            </div>
        </div>
    </div>
</div>

<div class="text-right">
    <div class="btn btn-primary">
        <i class="fa fa-search"></i>
    </div>
</div>

{{#each label in sortedLabels}}
    {{app-label model=label action='clickLabel'}}
{{/each}}
