<div class="media-left media-middle snippet-part">
    <div class="outer-image">
        <img class="media-object inner-image" {{bind-attr src=model.thumbnail}} />
    </div>
</div>

<div class="media-body snippet-part">
    <div>
        {{model.title}}
    </div>

    <div>
        {{#if model.isLoading}}
            <i class="fa fa-spinner fa-pulse"></i>
        {{/if}}
    </div>
</div>

<div class="media-right media-middle snippet-part">
    <i class="mdi-navigation-more-vert"></i>
</div>
