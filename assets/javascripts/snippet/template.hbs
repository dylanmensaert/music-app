<div {{action 'click'}} class="col-xs-10 inner-fill">
    <a {{bind-attr name=snippet.id class=':list-group-item :audio-list :outer-panel snippet.isSelected:active'}}>
        <div class="media-left media-middle">
            <div class="outer-image">
                <img class="media-object inner-image" {{bind-attr src=snippet.thumbnail}} />
            </div>
        </div>

        <div class="media-body">
            <div class="list-group-item-heading">
                {{snippet.title}}
            </div>

            {{#each label in snippet.labels}}
                <span class="label label-default">
                    {{label}}
                </span>&nbsp;
            {{/each}}

            {{#if snippet.isLoading}}
                <i class="fa fa-spinner fa-pulse"></i>
            {{/if}}
        </div>
    </a>
</div>

<div {{action 'toggleSelection'}} class="col-xs-2 handle" />

{{#if isDragging}}
    {{yield}}
{{/if}}
