<div {{action 'click'}} class="media-left media-middle snippet-part">
    <div class="outer-image">
        <img class="media-object inner-image" {{bind-attr src=model.thumbnail}} draggable="false" />
    </div>
</div>

<div {{action 'click'}} class="media-body snippet-part">
    <div>
        {{model.name}}
    </div>

    <div>
        {{#if model.isDownloading}}
            <code>
                <i>
                    downloading..
                </i>
                <i class="fa fa-spinner fa-pulse"></i>
            </code>
        {{/if}}
    </div>
</div>

<div {{action 'toggleSelection'}} class="media-right media-middle snippet-part">
    <i class="mdi-navigation-more-vert"></i>
</div>
